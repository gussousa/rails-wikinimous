<div class="container">
  <div class="row">
    <div class="col col-12">
      <% @articles.each do |article| %>
        <article>
          <h2><%= link_to "#{article.title}", article_path(article) %></h2>
          <p><%= article.content %></p>
        </article>
      <% end %>
    </div>
  </div>
</div>

