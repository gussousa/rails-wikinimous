<%= form_for(@article) do |f| %>
  <%= f.label :title, class:"control-label required" %>
  <%= f.text_field :title, class: "form-control mb-2" %>
  <%= f.label :content, class: "control-label required" %>
  <%= f.text_area :content, class: "form-control mb-4 large", rows: "10" %>
  <%= f.submit class: "btn-blue-to-orange" %>
<% end %>